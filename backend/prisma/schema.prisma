generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model User 
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(SALES)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  assignedCustomers Customer[] @relation("CustomerAssignment")
  callLogs          CallLog[]  @relation("UserCallLogs")

  @@map("users")
}

enum Role {
  ADMIN // Bisa membuat akun dan full access
  SALES_MANAGER // Baca performa sales dan manage data customer
  SALES // Hanya akses customer yang diassign
}

model Customer {
  id         Int @id @default(autoincrement())
  originalId Int @unique @map("originalId") // ID dari CSV (row number)

  // Assignment ke sales
  salesId    Int?  @map("sales_id")
  assignedTo User? @relation("CustomerAssignment", fields: [salesId], references: [id])

  // Kolom dari nasabah_prioritas.csv 
  name        String?
  phoneNumber String? @map("phoneNumber")
  score       Float?

  // Kolom dari bank-additional-full.csv 
  age          Int
  job          String
  marital      String
  education    String
  default      String
  housing      String
  loan         String
  contact      String
  month        String
  dayOfWeek    String @map("day_of_week")
  duration     Int
  campaign     Int
  pdays        Int
  previous     Int
  poutcome     String
  empVarRate   Float  @map("emp.var.rate")
  consPriceIdx Float  @map("cons.price.idx")
  consConfIdx  Float  @map("cons.conf.idx")
  euribor3m    Float
  nrEmployed   Float  @map("nr.employed")

  // Relations
  callLogs CallLog[] @relation("CustomerCallLogs")

  @@map("customers")
}

// Model untuk Call Log
model CallLog {
  id         Int        @id @default(autoincrement())
  customerId Int        @map("customer_id")
  userId     Int        @map("user_id")
  status     CallStatus
  notes      String?    @db.Text
  callDate   DateTime   @default(now()) @map("call_date")
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  // Relations
  customer Customer @relation("CustomerCallLogs", fields: [customerId], references: [id], onDelete: Cascade)
  user     User     @relation("UserCallLogs", fields: [userId], references: [id], onDelete: Restrict)

  // Indexes
  @@index([customerId])
  @@index([userId])
  @@index([status])
  @@map("call_logs")
}

enum CallStatus {
  INTERESTED
  NOT_INTERESTED
  NO_ANSWER
  WRONG_NUMBER
  CALLBACK
  COMPLETED
}
