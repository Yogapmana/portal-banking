# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/portal_banking"

# JWT Configuration
# Generate a secure random string for production (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-very-secure-secret-key-at-least-32-characters-long"
JWT_EXPIRES_IN="7d"

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
# In production, set to your frontend URL
CORS_ORIGIN="*"
