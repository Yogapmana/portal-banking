# ==========================================
# Portal Banking - Environment Configuration
# ==========================================
# Copy this file to .env and update with your values
# NEVER commit .env file to version control!

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your-super-secure-random-jwt-secret-key-here-min-32-chars
# Generate strong secret: openssl rand -base64 32

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://username:password@localhost:5433/portal_banking
# For production, use strong credentials and SSL

# ==========================================
# Seed User Credentials (Development Only)
# ==========================================
# Default test users created by npm run seed
ADMIN_EMAIL=admin@bank.com
ADMIN_PASSWORD=Admin123!  # Change for production!
SALES_EMAIL=sales@bank.com
SALES_PASSWORD=Sales123!  # Change for production!

# ==========================================
# Frontend Development
# ==========================================
# Show test credentials in UI (development only)
NEXT_PUBLIC_SHOW_TEST_CREDENTIALS=false
NEXT_PUBLIC_TEST_ADMIN_EMAIL=admin@bank.com
NEXT_PUBLIC_TEST_SALES_EMAIL=sales@bank.com

# ==========================================
# Production Security Settings
# ==========================================
# Enable additional security in production
NODE_ENV=production
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Optional: External Services
# ==========================================
# Email service (for notifications, password reset)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-service-api-key
FROM_EMAIL=noreply@yourbank.com

# Redis (for session storage, caching)
REDIS_URL=redis://localhost:6379

# Monitoring
LOG_LEVEL=info



